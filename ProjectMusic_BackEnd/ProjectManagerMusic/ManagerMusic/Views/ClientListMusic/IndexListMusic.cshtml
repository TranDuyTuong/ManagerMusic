                    </div><!-- media -->
                </div>
            </div><!-- az-dashboard-one-title -->
        </div><!-- row -->
    </div><!-- row -->

    <div class="container">
        <div class="row" style="width: 100%;">
            <div class="col-md-12">
                <div class="row">

                    <div class="col-md-6">
