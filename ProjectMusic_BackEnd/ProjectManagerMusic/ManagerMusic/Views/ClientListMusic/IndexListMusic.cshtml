                    </div>

                    <div class="col-md-6">
                        <p style="text-align: right;">
                            <select class="form-control" style="margin: 5px 5px; border-radius: 5px;" id="SelectViewer">
                                <option selected value="0">@languade.Getkey("Default_mode")</option>
                                <option value="1">@languade.Getkey("ViewAZ")</option>
                                <option value="2">@languade.Getkey("ViewZA")</option>
                            </select>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p style="text-align: center; font-size: 15px; color: red;" id="TxtTitleSeach"></p>
    <div class="container">
            <div class="col-md-12">
                <div class="row" id="BodyMuisc">

                </div>
            </div>
    </div>
    <p style="text-align: center; margin-top: 10px;">@languade.Getkey("page") : <b id="TotalItem" style="color:red;"></b>/<b id="ItemInPage" style="color:black;"></b></p>
    <!-- Pagination -->
    <div class="container">
        <div class="row" style="clear: both; margin: 0px 1px;">
            <div id="pagination" class="pagination"></div>
        </div>
    </div>

</div>
