@using ManagerMusic.Models
@inject LanguageService languade
@{
    ViewData["Title"] = @languade.Getkey("Star_rating");
    Layout = "~/Views/Shared/Manager_Data/Page_ManagerRatingMusic.cshtml";
}


<div class="az-content pd-y-20 pd-lg-y-30 pd-xl-y-40">
    <div class="container">
        <partial name="~/Views/SidebarMenu/Index.cshtml" />
        <div class="az-content-body pd-lg-l-40 d-flex flex-column">
            <div class="az-content-breadcrumb">
                <span><a asp-action="Index" asp-controller="Home" style="color: #97a3b9;">@languade.Getkey("Home_page")</a></span>
                <span>@languade.Getkey("Admin_Information")</span>
                <span><a asp-action="IndexFile" asp-controller="ManagerData" style="color: #97a3b9;">@languade.Getkey("File_management")</a></span>
                <span>@languade.Getkey("Star_rating")</span>
            </div>

            <partial name="~/Views/ManagerData/MenuManagerFile.cshtml" />

            <h2 class="az-content-title">@languade.Getkey("Star_rating")</h2>
            <div class="row">
                <div class="col-md-12">

                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <input style="width: 170%; border-radius: 5px;" type="text" class="form-control" placeholder=@languade.Getkey("Entersongid_reviewer")>
                        </div>
                    </div>

                    <p style="text-align:right;">
                        <a style="border: none;" id="btn-ActiverRemoveComment" class="btn btn-outline-secondary" data-bs-toggle="tooltip" data-bs-placement="right" title="Xóa tất cả các bình luận"><i class="fas fa-trash"></i></a>
                        <a style="border: none;" class="btn btn-outline-secondary">@languade.Getkey("Total_stars"): <b>23</b></a>
                    </p>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">
                                    <input type="checkbox" id="selectall" />
                                </th>
                                <th scope="col">@languade.Getkey("No")</th>
                                <th scope="col">@languade.Getkey("namesong")</th>
                                <th scope="col">@languade.Getkey("Reviewer_name")</th>
                                <th scope="col">@languade.Getkey("Total_stars")</th>
                                <th scope="col">@languade.Getkey("Options")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <input type="checkbox" class="case" name="case" value="1" />
                                </th>
                                <td>1</td>
                                <td>tt</td>
                                <td>mdo</td>
                                <td>
                                    <p style="font-family: inherit; color: green;">
                                        <i class="fas fa-plus-circle"></i>
                                        Hoạt Động
                                    </p>
                                </td>
                                <td>
                                    <a style="border: none;" id="btn-ShowChooseOption" class="btn btn-outline-secondary" ata-bs-toggle="tooltip" data-bs-placement="top" title="Xóa đánh giá sao này"><i class="fas fa-backspace"></i></a>
                                    <a style="border: none;" id="btn-ShowModalViewDetailRating" class="btn btn-outline-secondary" ata-bs-toggle="tooltip" data-bs-placement="top" title="Xem chi tiết"><i class="fas fa-folder-open"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>

            <div class="az-footer mg-t-auto">
                <div class="container">
                    <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">@languade.Getkey("Design_In_2022")</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Do <a href="#" target="_blank">@languade.Getkey("Petros_Tuong")</a> từ duytuong0503@gmail.com</span>
                </div><!-- container -->
            </div><!-- az-footer -->
        </div><!-- az-content-body -->
    </div><!-- container -->
</div><!-- az-content -->
<!--choose option-->
<div class="modal showmodal-seachNamemusic" tabindex="-1" id="modal-ShowChooseOption">
    <div class="modal-dialog" style="max-width: 90%;">
        <div class="modal-content" style="height: 600px;">
            <div class="modal-header">
                <h5><i class="fas fa-toolbox"></i> Chi Tiết Đánh Giá Sao Cho Bài Hát</h5>

                <p>
                    <a href="#"><i class="fas fa-star"></i> 1-sao |</a>
