<!--Modal upload plan by admin-->
<div class="modal showmodal-seachNamemusic" tabindex="-1" id="ModalShowUpdatePlan">
    <div class="modal-dialog" style="max-width: 60%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@languade.Getkey("TaskUpdate")</h5>
                <button type="button" class="btn-close" id="CloseUpdatePlan">X</button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">@languade.Getkey("Task_Code")</label>
                    <input disabled style="border-radius:10px;" type="text" class="form-control" id="TxtIdPlan_Update" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@languade.Getkey("Title")</label>
                    <input style="border-radius:10px;" type="text" class="form-control" id="TxtTitlePlan_Update" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@languade.Getkey("Mission_Contents")</label>
                    <textarea style="border-radius:10px;" type="text" class="form-control" id="TxtContentPlan_Update"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p style="margin: 10px 10px; font-family: initial; font-weight: 600;">@languade.Getkey("TaskFile_List")</p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">@languade.Getkey("No")</th>
                                    <th scope="col">@languade.Getkey("Filename")</th>
                                    <th scope="col">@languade.Getkey("Filetype")</th>
                                    <th scope="col">@languade.Getkey("datecreate")</th>
                                    <th scope="col">@languade.Getkey("Options")</th>
                                </tr>
                            </thead>
                            <tbody id="TxtBodyUpdate_Plan" style="height: 200px;">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnUpdate_Plan" style="border-radius:10px;" type="button" class="btn btn-primary"><i class="fas fa-edit"></i> @languade.Getkey("Update")</button>
            </div>
        </div>
    </div>
</div>

