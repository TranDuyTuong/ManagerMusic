}
<div class="az-content-body pd-lg-l-40 d-flex flex-column">
    <div class="az-content-breadcrumb">
        <span><a href="#" style="color: #97a3b9;">@languade.Getkey("Home_page")</a></span>
        <span><a href="#" style="color: #97a3b9;">@languade.Getkey("Admin_Information")</a></span>
        <span><a asp-action="Page_Plans" asp-controller="ManagerPlans" style="color: #97a3b9;">@languade.Getkey("Task_Manager")</a></span>
        <span>@languade.Getkey("Detail_Task")</span>
    </div>

    <h2 class="az-content-title" id="TxtNamePlan"></h2>
    <div class="row">
        <div class="col-md-12">
            <p style="text-align:right;">

                <a id="Btn_EditPlan" style="border: none;" class="btn btn-outline-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="@languade.Getkey("Update_Satff")"><i class="fas fa-edit"></i></a>

                <a id="Btn_EditDateTime" style="border: none;" class="btn btn-outline-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="@languade.Getkey("Renew_task")"><i class="fas fa-calendar-alt"></i></a>

                <a id="Btn_UserPlan" style="border: none;" class="btn btn-outline-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="@languade.Getkey("Assigntasks_others")"><i class="fas fa-user-tag"></i></a>

                <a id="Btn_Reload" style="border: none;" class="btn btn-outline-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="@languade.Getkey("reset")"><i class="fas fa-sync-alt"></i></a>

            </p>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("Task_Code")</label>
                        <input disabled type="text" class="form-control" id="TxtZipCode" style="font-weight: 600; border-radius: 10px;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("EmployeesRequired_Tasks")</label>
                        <input type="text" class="form-control" id="StaffPlan" style="font-weight: 600; border-radius: 10px;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("Task_Creator")</label>
                        <input type="text" class="form-control" id="AdminRequest" style="font-weight: 600; border-radius: 10px;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("datecreate")</label>
                        <input type="text" class="form-control" id="TxtDateCreate" style="font-weight: 600; border-radius: 10px;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("Expiration_date")</label>
                        <input type="text" class="form-control" id="TxtDateTimeUp" style="font-weight: 600; border-radius: 10px;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("Expiration_Time")</label>
                        <input type="text" class="form-control" id="TxtTimeUp" style="font-weight: 600; border-radius: 10px;">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("Mission_Contents")</label>
                        <textarea class="form-control" id="TxtContentPlan" style="font-weight: 600; border-radius: 10px;"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("TaskAcceptance_Status")</label>
                        <input disabled type="text" class="form-control" id="TxtStatusPlan" style="font-weight: 600; border-radius: 10px;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("Deadline_task")</label>
                        <input disabled type="text" class="form-control" id="TxtNameTimeUp" style="font-weight: 600; border-radius: 10px;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style=" font-family: initial; color: #0372c6; font-weight: 600;">@languade.Getkey("Implementation_progress")</label>
                        <input disabled type="text" class="form-control" id="TxtProgressing" style="font-weight: 600; border-radius: 10px;">
                    </div>
                    <div class="progress" id="ProgessDataPlan">
                    </div>
                    <hr />
                    <div class="mb-3">
                        <button id="btnSucessPlan" style="border-radius: 10px; display: none;" type="button" class="btn btn-success">@languade.Getkey("Complete_Task") <i class="fas fa-clipboard-check"></i></button>
                    </div>
                </div>
            </div>
            <hr />
            <p>@languade.Getkey("Attachedtask_File") <i class="fas fa-file"></i></p>
            <table class="table table-hover">
                <thead style="text-align: center;">
                    <tr>
                        <th scope="col">@languade.Getkey("No") <i class="fa fa-fw fa-sort"></i></th>
                        <th scope="col" style="text-align: center;">@languade.Getkey("Filename")</th>
                        <th scope="col" style="text-align: center;">@languade.Getkey("datecreate")</th>
                        <th scope="col" style="text-align: center;">@languade.Getkey("Filetype")</th>
                        <th scope="col" style="text-align: center;">@languade.Getkey("Options")</th>
                    </tr>
                </thead>
                <tbody id="Body_Data" style="height: 150px; text-align: center;">
                </tbody>
            </table>

        </div>
    </div>

    <div class="az-footer mg-t-auto">
        <div class="container">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">@languade.Getkey("Design_In_2022")</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Do <a href="#" target="_blank">@languade.Getkey("Petros_Tuong")</a> from duytuong0503@gmail.com</span>
        </div><!-- container -->
    </div><!-- az-footer -->
</div><!-- az-content-body -->
<!-- Modal loading create saint -->
